@import "components/*";
@import '_variables';

/*--------------------------------------------------------------
TYPOGRAPHY
--------------------------------------------------------------*/
.container {
	margin: 0;
}

h1 {
  font-family: 'Oswald', sans-serif;
  font-weight: 600;
  color: $dark-blue;
  clear: both;
}

h2 {
	font-family: 'Martel', sans-serif;
	font-weight: 400;
	clear: both;
}

h3, h4, h5, h6 {
  font-family: 'Playfair', sans-serif;
  font-weight: 100;
  clear: both;
}

p, a, li, form, textarea, button {
  font-family: 'Quattrocento Sans', sans-serif;
  font-weight: 100;
  text-decoration: none;
}

ul {
	list-style: none;
}


/*--------------------------------------------------------------
GENERAL
--------------------------------------------------------------*/
h1,
h2,
h3 {
	text-align: center;
	margin: 0;
	padding: 16px;
}

img {
	display: block;
	border: 0;
	width: 100%;
	height: auto;
}

/*--------------------------------------------------------------
CSS Grid layout for modern browsers:
--------------------------------------------------------------*/
@supports (grid-area: auto) {
	@media screen and (min-width: 768px) {
    .container {
			background: url('<%= asset_path 'home-bg.jpg' %>');
			background-size: cover;
		  height: 95vh;
		  width: 100vw;
			overflow: scroll;

			display: grid;
      grid-template-rows: 1fr 4fr;
		}

		.header {
			grid-row: 1;
			background-color: white;
			opacity: .9;
			position: fixed;
			top: 0;

			width: 100vw;
		}

		.body {
			grid-row: 2;
		}
  }
}

/****************************
*     BUTTONS
****************************/
.button {
    background-color: $dark-blue;
    color: white;
    margin: 5px;
    text-align: center;
    text-decoration: none;
		padding: 10px 15px;
    display: inline;
    font-size: 12px;
    border-radius: 12px;
}

.button:hover {
  background-color: $pale-green;
  text-shadow: 2px 2px 4px #000000;
}
